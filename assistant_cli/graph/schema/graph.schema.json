{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Anton Graph Definition",
  "type": "object",
  "required": ["id", "name", "start", "nodes"],
  "properties": {
    "id": {"type": "string", "minLength": 1},
    "name": {"type": "string", "minLength": 1},
    "version": {"type": "string"},
    "start": {"type": "string", "minLength": 1},
    "execution_defaults": {
      "type": "object",
      "properties": {
        "guarantee_mode": {"type": "string", "enum": ["strict", "bounded", "flex"]},
        "ai_edge_policy": {"type": "string", "enum": ["always", "auto", "never"]}
      },
      "additionalProperties": true
    },
    "state_access": {
      "type": "object",
      "properties": {
        "default_enabled": {"type": "boolean"}
      },
      "additionalProperties": true
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["node_id", "type"],
        "properties": {
          "node_id": {"type": "string", "minLength": 1},
          "type": {
            "type": "string",
            "enum": [
              "start",
              "end",
              "condition",
              "transform",
              "tool",
              "ai_template",
              "read_state",
              "write_state",
              "read_prior_runs"
            ]
          },
          "input_schema": {
            "type": "object"
          },
          "output_schema": {
            "type": "object"
          },
          "next": {
            "oneOf": [
              {"type": "string"},
              {"type": "array", "items": {"type": "string"}, "minItems": 1}
            ]
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
